<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_termin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.nickljackson.fubgaming.TerminActivity">

        <TextView
                android:id="@+id/beschreibung_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:text="Beschreibung:"/>

        <TextView
                android:id="@+id/beschreibung_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/beschreibung_titel"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorBlack"
                android:text="beschreibung... remove"/>

        <TextView
                android:id="@+id/zeitpunkt_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:text="Zeitpunkt:"
                android:layout_below="@id/beschreibung_text"/>
        <TextView
                android:id="@+id/zeitpunkt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beschreibung_text"
                android:layout_toRightOf="@id/zeitpunkt_titel"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:text="18 Uhr 30 ........... remove"/>

        <TextView
                android:id="@+id/lineup_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zeitpunkt_text"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:text="Lineup:"
                />

        <TextView
                android:id="@+id/lineup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zeitpunkt_text"
                android:layout_toRightOf="@+id/lineup_titel"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:text="NickLJackson \nBlub \nEricsson \nBaumi \nremove"/>
</RelativeLayout>
